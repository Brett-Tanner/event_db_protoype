<div class="event">
    <h2><%= link_to event.title, event_path(event) %></h2>
    <h3>At <%= event.school.name %></h3>
    <p><%= event.description %></p>
    
    <p>Start Date: <%= event.start_date %></p>
    <p>End Date: <%= event.end_date %></p>
    <p><%= event.children.distinct.count %> children attending</p>

    <% if current_user.role == "admin" %>
        <div class="event_management">
            <%= link_to "Edit Event", edit_event_path(event) %>
            <%= link_to "Delete Event", event_path(event), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{event.title} at #{event.school.name}?"} %>
        </div>
    <% end %>
</div>