<div class="user">
    <h2><%= link_to user.name, user_path(user) %></h2>
    <p>Role: <%= user.role %></p>
    <h3>Contact Information</h3>
    <p>Phone Number: <%= user.phone %></p>
    <p>Email: <%= user.email %></p>
    <%= link_to "Edit user", edit_user_path(user) if current_user.role == "admin" || current_user.role == "school_manager" %>
    <%= link_to "Delete User", user_path(user), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this #{user.role}?"} if current_user.role == "admin" || current_user.role == "school_manager" %>
</div>